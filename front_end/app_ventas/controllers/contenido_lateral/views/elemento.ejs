<%# Recibe un objeto, la lista de atributos a mostrar y un numero que indica que posicion de la lista tiene %>

<tr <%= elemento_render %> class="fondo_<%= indice % 2 == 0? 'blanco': 'negro' %>">
    <% atributos_render.forEach( function(atributo, j) { %>
    	<td>
        	<% if(atributo == "imagen") { %>
        		<img
                    src="http://placehold.it/80.jpg&text=<%=elemento_render["nombre"]%>" 
                    alt="Imagen de <%=elemento_render["nombre"]%>"
                    width="64px" height="64px">
            <% } else { %>
				<label>
				    <%= elemento_render[atributo] %>
				</label>
			<% } %>
	    </td>
    <% }); %>

    <td>
        <div class = "boton_amarillo"
             title='AquÃ­ podras eliminar este producto del sistema.'>
